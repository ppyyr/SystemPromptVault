{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v2.0.0/tooling/cli/schema.json",
  "productName": "SystemPromptVault",
  "version": "0.1.0",
  "identifier": "com.example.systemprompt-vault",
  "build": {
    "beforeBuildCommand": "npm run build:css",
    "beforeDevCommand": "npm run watch:css",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "System Prompt Vault",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "nsis", "deb"],
    "icon": [
      "icons/icon.png"
    ]
  }
}
